<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>Small Business - Start Bootstrap Template</title>
    <!-- Favicon -->
    <link rel="icon" type="image/x-icon" href="~/Content/assets/favicon.ico" />

    <!-- CSS Bundle Reference -->
    @Styles.Render("~/Content/css")

</head>
<body>
    <!-- Responsive navbar-->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container px-5">
            <a class="navbar-brand" href="@Url.Action("Index","Home")">Scheduling Adiminstration Tool</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation"><span class="navbar-toggler-icon"></span></button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav ms-auto mb-2 mb-lg-0">

                    @if (Request.IsAuthenticated)
                    {

                        <li class="nav-item dropdown mt-1">
                            <a class="nav-link dropdown-toggle" id="navbarDropdown" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">Scheduling</a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <li><a class="dropdown-item" href="@Url.Action("Index", "Courses")">Course</a></li>
                                <li><a class="dropdown-item" href="@Url.Action("Index", "Enrollments")">Enrollments</a></li>
                                <li><a class="dropdown-item" href="@Url.Action("Index", "ScheduledClasses")">Scheduled Classes</a></li>
                                <li><a class="dropdown-item" href="@Url.Action("Index", "Students")">Students</a></li>
                            </ul>
                        </li>

                        if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item dropdown mt-1">
                                <a class="nav-link dropdown-toggle" id="navbarDropdown" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">Admin Functions</a>
                                <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                    <li><a class="dropdown-item" href="@Url.Action("Index", "UsersAdmin")">Users</a></li>
                                    <li><a class="dropdown-item" href="@Url.Action("Index", "RolesAdmin")">Roles</a></li>
                                </ul>
                            </li>

                        }

                    }

                    @Html.Partial("_LoginPartial")

                </ul>
            </div>
        </div>
    </nav>


    @RenderBody()

    <!-- Footer-->
    <footer class="py-5 bg-dark">
        <div class="container px-4 px-lg-5"><p class="m-0 text-center text-white">Copyright &copy; SAT 2021</p></div>
    </footer>
    <!-- Bootstrap core JS-->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Core theme JS-->
    <script src="~/Content/js/scripts.js"></script>

    @Scripts.Render("~/bundles/js")
    @RenderSection("Scripts", required: false)

</body>
</html>
