@model SAT.DATA.EF.Course

@{
    ViewBag.Title = "Details";
}



        <div class="row gutters-sm">
            <div class="col-md-4 mb-3">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex flex-column align-items-center text-center">
                            @*<img src="https://bootdey.com/img/Content/avatar/avatar7.png" alt="Admin" class="rounded-circle" width="150">*@
                            <div class="mt-3">
                                <h4>   
                                        @Html.DisplayFor(model => model.CourseName)                          
                                </h4>
                                <p class="text-secondary mb-1">Credit Hour/s:  @Html.DisplayFor(model => model.CreditHours)</p>
                                <p class="text-muted font-size-sm">@Html.DisplayFor(model => model.CourseDescription)</p>
                                <a class="btn btn-primary" href="@Url.Action("Index","ScheduledClasses")">Add</a>
                                <a class="btn btn-primary" href="@Url.Action("Index","Courses")">Back</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-8">
            <div class="card mb-3">
                <div class="card-body">
                    <div class="row">
                        <div class="col-sm-3">
                            <h6 class="mb-0">  @Html.DisplayNameFor(model => model.Curriculum)</h6>
                        </div>
                        <div class="col-sm-9 text-secondary">
                            @Html.DisplayFor(model => model.Curriculum)
                        </div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-sm-3">
                            <h6 class="mb-0">@Html.DisplayNameFor(model => model.Notes)</h6>
                        </div>
                        <div class="col-sm-9 text-secondary">
                            @Html.DisplayFor(model => model.Notes)
                        </div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-sm-3">
                            <h6 class="mb-0"> @Html.DisplayNameFor(model => model.IsActive)</h6>
                        </div>
                        <div class="col-sm-9 text-secondary">
                            @Html.DisplayFor(model => model.IsActive)
                        </div>
                    </div>                                                          
                    <hr>
                    <div class="row">
                        <div class="col-sm-12">                            
                            @Html.ActionLink("Edit", "Edit", new { id = Model.CourseId }, new { @class = "btn btn-info" })
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
