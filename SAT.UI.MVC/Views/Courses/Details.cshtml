@model SAT.DATA.EF.Course

@{
    ViewBag.Title = "Details";
}

<div class="mb-2">
    <div class="container px-4 px-lg-5">
        <div class="row gx-4 gx-lg-5 justify-content-center">
            <div class="col-md-12 col-lg-10 col-xl-9">

                <div>
                    <hr />
                    <dl class="dl-horizontal">
                        <dt>
                            @Html.DisplayNameFor(model => model.CourseName)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.CourseName)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.CourseDescription)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.CourseDescription)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.CreditHours)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.CreditHours)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.Curriculum)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Curriculum)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.Notes)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Notes)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.IsActive)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.IsActive)
                        </dd>

                    </dl>
                    <div class="form-group my-4">
                        <div class="col-md-offset-2 col-md-12">
                            <!-- Edit Button-->
                            @if (User.IsInRole("Admin"))
                            {
                                @Html.ActionLink("Edit", "Edit", new { id = Model.CourseId }, new { @class = "btn btn-warning btn-sm mx-1" })
                            }

                                @Html.ActionLink("Back To Courses", "Index", null, new { @class = "btn btn-info float-end" })
                            </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>