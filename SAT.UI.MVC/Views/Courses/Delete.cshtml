                </div>
                <hr>
                <div class="row">
                    <div class="col-sm-3">
                        <h6 class="mb-0">@Html.DisplayNameFor(model => model.Notes):</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                        @Html.DisplayFor(model => model.Notes)
                    </div>
                </div>
                <hr>
                <div class="row">
                    <div class="col-sm-3">
                        <h6 class="mb-0"> @Html.DisplayNameFor(model => model.IsActive):</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                        @Html.DisplayFor(model => model.IsActive)
                    </div>
                </div>
                <hr>
                <div class="row">
                    <div class="col-sm-12">
                        <a class="btn btn-info " target="__blank" href="@Url.Action("Delete","Courses")">Delete</a>
                        <a class="btn btn-info " target="__blank" href="@Url.Action("Index","Courses")">Back</a>
                    </div>
                </div>
            </div>
        </div>
