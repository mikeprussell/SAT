@model IEnumerable<SAT.DATA.EF.Course>

@{
    ViewBag.Title = "Course List";
}

<div class="mb-4">
    <div class="container px-4 px-lg-5">
        <div class="row gx-4 gx-lg-5 justify-content-center">
            <div class="col-md py-2">            
                <hr />

                @if (User.IsInRole("Admin"))
                {
                    <p>
                        <a class="btn btn-primary btn-sm" href="@Url.Action("Create", "Courses")">Create</a>
                    </p>
                }

                @* @Html.ActionLink("Create New", "Create") *@


                <p>
                    @Html.ActionLink("Retired Courses", "Courses", null, new { @class = "btn-primary btn-sm pull-right" })
                </p>
                @foreach (var item in Model)
                {

                    <div class="row gx-4 gx-lg-5">
                        <div class="col-md-4 mb-5">
                            <div class="card h-100">
                                <div class="card-body">
                                    <h2 class="card-title">@item.CourseName</h2>
                                    <h4>Credit Hour/s: @item.CreditHours</h4>
                                    <p class="card-text"> @item.CourseDescription | @item.Curriculum </p>
                                </div>
                                <div class="card-footer">
                                    @*<a class="btn btn-primary btn-sm" href="@Url.Action("Details", "Courses")">Details</a>*@
                                    @Html.ActionLink("Details", "Details", new { id = item.CourseId }, new { @class = "btn btn-primary btn-sm" })

                                    @if (User.IsInRole("Admin"))
                                    {
                                        @Html.ActionLink("Edit", "Edit", new { id = item.CourseId }, new { @class = "btn btn-primary btn-sm" })

                                        @Html.ActionLink("Delete", "Delete", new { id = item.CourseId }, new { @class = "btn btn-primary btn-sm" })
                                    }

                                </div>
                            </div>
                        </div>
                    </div>
                }

