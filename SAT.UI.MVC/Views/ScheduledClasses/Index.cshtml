@model IEnumerable<SAT.DATA.EF.ScheduledClass>

@{
    ViewBag.Title = "Scheduled Class";
}


@if (User.IsInRole("Admin") || User.IsInRole("Operations Employee"))
{
<p>
    <a class="btn btn-primary btn-sm" href="@Url.Action("Create", "ScheduledClasses")">Create</a>
</p>
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.StartDate)
