            {
                @*@Html.ActionLink("Edit", "Edit", new { id=item.ScheduledClassId }, new { @class = "btn btn-warning btn-sm" })*@
            }

                @Html.ActionLink("Details", "Details", new { id=item.ScheduledClassId }, new { @class = "btn btn-primary btn-sm" }) |

