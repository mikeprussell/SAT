@model IEnumerable<SAT.DATA.EF.Enrollment>

@{
    ViewBag.Title = "Enrollment";
}

@if (User.IsInRole("Admin") || User.IsInRole("Scheduling"))
{
<p>
    <a class="btn btn-primary" href="@Url.Action("Create", "Enrollments")">Enroll New Student</a>
</p>
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.EnrollmentDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ScheduledClass.InstructorName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Student.FirstName)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.EnrollmentDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ScheduledClass.InstructorName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Student.FirstName)
        </td>
        <td>

            @if (User.IsInRole("Admin") || User.IsInRole("Scheduling"))
            {
            @*@Html.ActionLink("Edit", "Edit", new { id=item.EnrollmentId }, new { @class = "btn btn-warning btn-sm" })*@
            }

            @Html.ActionLink("Details", "Details", new { id=item.EnrollmentId }, new { @class = "btn btn-primary btn-sm" }) |

            @if (User.IsInRole("Admin") || User.IsInRole("Scheduling"))
            {
            @Html.ActionLink("Delete", "Delete", new { id=item.EnrollmentId }, new { @class = "btn btn-danger btn-sm" })
            }
        </td>
    </tr>
}

</table>
